@page
@using Newtonsoft.Json.Linq
@using TravelGalleryWeb.Models
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="greetings">
    <div class="container">
        <div class="jumbotron">
            <h1 class="d3">Welcome!</h1>
            <p class="lead">This is my travel photo-gallery. I am not a professional photographer, but I love mountains a lot, and I am happy to share my experiences with the world.</p>
        </div>
    </div>
</section>

<section>
        
    <div class="container">
        <div class="card-columns locationsBlock">
            @foreach (var album in Model.AlbumList)
            {
                <div class="card bg-white text-white" style="">
                    <a asp-page="/Album" asp-route-id="@album.Id">
                        <img src=@album.Cover class="card-img" alt="...">
                        <div class="card-img-overlay d-flex align-items-end px-0">
                            <h5 class="card-title flex-fill pl-3">@album.Name</h5>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>